{
	"$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
	"vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!!**/dist"]
	},
	"formatter": {
		"enabled": true,
		"includes": ["**/*.json", "**/*.jsonc", "**/*.ts", "**/*.js"],
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100,
		"lineEnding": "lf"
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			},
			"correctness": {
				"noInvalidUseBeforeDeclaration": "off",
				"noUnusedVariables": "error"
			},
			"performance": {
				"noDelete": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "info",
				"useBlockStatements": "off"
			},
			"suspicious": {
				"noImplicitAnyLet": "info",
				"noAssignInExpressions": "off",
				"noExplicitAny": "off"
			}
		},
		"includes": ["**", "!!**/dist/**/*", "!**/src/nimble.js", "!**/public/**/*"]
	},
	"json": {
		"formatter": {
			"trailingCommas": "none",
			"indentStyle": "tab",
			"indentWidth": 2
		}
	},
	"overrides": [
		{
			"includes": ["**/*.svelte"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					},
					"style": {
						"useConst": "off",
						"useImportType": "off"
					}
				}
			}
		}
	],
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"trailingCommas": "all",
			"semicolons": "always",
			"quoteStyle": "single"
		},
