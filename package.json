{
	"name": "nimble",
	"version": "0.1.0",
	"description": "An official implementation of Nimble 2 for Foundry Virtual Tabletop.",
	"main": "nimble.mjs",
	"type": "module",
	"scripts": {
		"build": "npm run build:compendia && vite build",
		"build:system": "vite build",
		"build:compendia": "node ./build/buildCompendia.mjs",
		"dev": "vite",
		"format": "npx @biomejs/biome format --write ./src/ && npx prettier --write \"src/**/*.svelte\"",
		"format:biome": "npx @biomejs/biome format --write ./src/",
		"format:svelte": "npx prettier --write \"src/**/*.svelte\"",
		"lint:svelte": "eslint \"src/**/*.svelte\"",
		"lint:svelte-fix": "eslint \"src/**/*.svelte\" --fix",
		"lint": "npm run lint:svelte ; npx @biomejs/biome lint ./src/",
		"lint-fix": "npm run lint:svelte-fix ; npx @biomejs/biome lint --write ./src/",
		"check:svelte": "svelte-check --tsconfig ./tsconfig.json",
		"type-check": "tsc --noEmit",
		"spell-check": "npx cspell -c ./cspell.json lint . --words-only | sort -u"
	},
	"imports": {
		"#lib/*": "./lib/*",
		"#managers/*": "./src/managers/*",
		"#stores/*": "./src/stores/*",
		"#types/*": "./types/*",
		"#utils/*": "./src/utils/*",
		"#view/*": "./src/view/*"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Nimble-Co/FoundryVTT-Nimble.git"
	},
	"authors": [
		{
			"name": "Phillip Best",
			"email": "me@phillip.best",
			"url": "https://bio.link/philbest"
		},
		{
			"name": "NekroDarkmoon",
			"url": "https://github.com/NekroDarkmoon/"
		}
	],
	"funding": [
		{
			"type": "patreon",
			"url": "https://www.patreon.com/ForgemasterModules"
		},
		{
			"type": "individual",
			"url": "https://ko-fi.com/philbest"
		},
		{
			"type": "individual",
			"url": "https://ko-fi.com/nekrodarkmoon"
		}
	],
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Nimble-Co/FoundryVTT-Nimble/issues"
	},
	"homepage": "https://github.com/Nimble-Co/FoundryVTT-Nimble#readme",
	"private": true,
	"engines": {
		"node": ">=22.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.1",
		"@league-of-foundry-developers/foundry-vtt-types": "github:League-of-Foundry-Developers/foundry-vtt-types#173495578eb85f9ce3dddb7f37b9bf2a1b537488",
		"@sveltejs/vite-plugin-svelte": "6.2.1",
		"@tsconfig/svelte": "^5.0.5",
		"@types/node": "^24.9.1",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"classic-level": "^1.4.1",
		"eslint": "^9.38.0",
		"eslint-plugin-svelte": "^3.12.5",
		"glob": "^11.0.3",
		"globals": "^16.4.0",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"sass": "^1.93.2",
		"stylelint": "^16.25.0",
		"stylelint-config-sass-guidelines": "^12.1.0",
		"svelte-check": "^4.3.3",
		"svelte-eslint-parser": "^1.4.0",
		"svelte-range-slider-pips": "^4.1.0",
		"vite": "^7.1.12"
	},
	"dependencies": {
		"svelte": "^5.42.2",
		"svelte-preprocess": "^6.0.3",
		"typescript": "^5.9.3"
	}
}
